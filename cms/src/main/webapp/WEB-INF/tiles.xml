<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!--Определение шаблона всех страниц-->
    <definition name="template" template="/WEB-INF/jsp/layouts/template.jsp">
        <put-attribute name="body">
            <definition name="body.template" template="/WEB-INF/jsp/layouts/body.jsp">
                <put-attribute name="menu" value="/WEB-INF/jsp/layouts/menu.jsp"/>
                <put-attribute name="footer" value="/WEB-INF/jsp/layouts/footer.jsp"/>
            </definition>
        </put-attribute>
    </definition>
    
    <!--Пользователи-->
    <definition name="users-page" extends="template">
        <put-attribute name="title" value="menu.1.item.1"/>
        <put-attribute name="content" value="/WEB-INF/jsp/admin/users.jsp" cascade="true"/>
    </definition>

    <!--Статус системы-->
    <definition name="status-page" extends="template">
        <put-attribute name="title" value="menu.1.item.2"/>
        <put-attribute name="content" value="/WEB-INF/jsp/status.jsp" cascade="true"/>
    </definition>

    <!--Шаблоны доменных имен-->
    <definition name="domains-page" extends="template">
        <put-attribute name="title" value="menu.1.item.3"/>
        <put-attribute name="content" value="/WEB-INF/jsp/admin/domains.jsp" cascade="true"/>
    </definition>

    <!--Общее количество веб-запросов-->
    <definition name="click-count-page" extends="template">
        <put-attribute name="title" value="menu.2.item.1"/>
        <put-attribute name="content" value="/WEB-INF/jsp/reports/click-count.jsp" cascade="true"/>
    </definition>

    <!--Статистика о запросах-->
    <definition name="tracked-requests-page" extends="template">
        <put-attribute name="title" value="menu.2.item.2"/>
        <put-attribute name="content" value="/WEB-INF/jsp/reports/tracked-requests.jsp" cascade="true"/>
    </definition>
    
</tiles-definitions>